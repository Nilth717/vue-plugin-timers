{
	"defaultSeverity": "error",
	"extends": ["tslint-config-standard", "tslint-config-prettier"],
	"jsRules": {},
	"rules": {
		"prettier": [
			true,
			{
				"semi": false,
				"arrowParens": "always",
				"singleQuote": true,
				"trailingComma": "none",
				"printWidth": 120,
				"tabWidth": 2
			}
		]
	},
	"rulesDirectory": ["tslint-plugin-prettier"]
}
